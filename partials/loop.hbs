{{#foreach posts}}
<article class="u-main-spacer sw-loop__item {{post_class}}">
    <header>
        <h2><a href="{{url}}">{{title}}</a></h2>
    </header>
    <footer>
        {{#if author.profile_image}}<img src="{{author.profile_image}}" alt="{{author.name}}" />{{/if}}
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY-MM-DD"}}</time>
        {{tags prefix="  "}}

    </footer>
    <br>
    <section>

        <p>{{excerpt words="26"}}...</p>
    </section>

</article>
{{/foreach}}

<div class="u-main-spacer sw-pagination">
  {{pagination}}
</div>
